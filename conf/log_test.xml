<logging>
    <filter enabled="true">
        <tag>stdout</tag>
        <type>console</type>
        <level>DEBUG</level>
    </filter>
    <filter enabled="true">
        <tag>stderr</tag>
        <type>console</type>
        <level>DEBUG</level>
    </filter>
    <filter enabled="true">
        <tag>kite_handler</tag>
        <type>file</type>
        <level>DEBUG</level>
        <property name="filename">./logs/kiteq/kite_handler.log</property>
        <property name="format">[%D %T] [%L] %M</property>
        <property name="rotate">true</property>
        <property name="maxsize">100M</property>
        <property name="maxlines">10M</property>
        <property name="daily">true</property>
    </filter>
</logging>
